<% layout('layouts/default') -%>
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">

            </div>
        </div>
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h1>Change Password</h1>
            </div>
            <div class="panel-body">
                <div class="row">

                    <div class="row">
                        <% if(msgdata!=null){ %>
                            <div class="col-sm-12 alert alert-info">
                                <%= msgdata %>
                            </div>
                            <% } %>
                    </div>
                    <br />
                    <% if(errors) { %>
                        <h3 class="errors-heading">Please input the following fields:</h3>
                        <% for (var i=0; i < errors.length; i++) { %>
                            <p class="alert alert-danger">
                                <%= errors[i].msg %>
                            </p>
                            <% } %>
                                <% } %>

                                    <form class="form-horizontal" method="post" action="change_password" role="form">
                                        <div class="col-sm-12">

                                            <div class="row">
                                                <div class="col-sm-4">
                                                    <label>New Password:</label>
                                                </div>
                                                <div class="col-sm-6">
                                                    <input type="password" name="user_password" id="user_password"
                                                        class="form-control input-lg btn-mint">
                                                </div>
                                                <div class="col-sm-2">

                                                </div>
                                            </div>
                                            <br />
                                            <div class="row">
                                                <div class="col-sm-4">
                                                    <label>Re-enter Password:</label>
                                                </div>
                                                <div class="col-sm-6">
                                                    <input type="password" name="confirm_password" id="confirm_password"
                                                        class="form-control input-lg btn-mint">
                                                </div>
                                                <div class="col-sm-2">

                                                </div>
                                            </div>
                                            <br />
                                            <div class="row">
                                                <div class="col-sm-4"></div>
                                                <div class="col-sm-4">
                                                    <input type="submit" value="Submit" class="btn btn-primary">
                                                </div>
                                                <div class="col-sm-4"></div>
                                            </div>
                                        </div>
                                    </form>
                </div>
            </div>
        </div>
        <!-- /.row -->

        <!-- /#page-wrapper -->