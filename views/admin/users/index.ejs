<% layout('layouts/default') -%>

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">

            </div>
        </div>

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h1>Users Management</h1>
            </div>
            <div class="panel-body">

                <form id="tableForm" name="user" action="index" method="post">
                    <div class="row-fluid force-margin">
                        <div class="form-group row">
                            <label for="selectCategory" class="col-form-label" style="float:left; padding:8px;">User
                                Type </label>
                            <div class="col-sm-4 ctrl-field">
                                <% //=user_type %>
                                    <select name="user_type" class="form-control input-lg btn-mint">
                                        <option value='vendor' <%=user_type=='vendor' ? 'selected' : '' %>>User
                                        </option>
                                        <option value='register' <%=user_type=='register' ? 'selected' : '' %>>Register
                                        </option>
                                    </select>
                            </div>
                            <div class="span12">
                                <div class="form-actions">
                                    <input type="submit" value="Search" class="btn btn-primary">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-6"></div>
                        <div class="col-sm-2">
                            <a href="/admin/users/addusers" class="btn btn-primary">Add User</a>
                        </div>
                    </div>
                </div> <br /><br />
                <div class="row">
                    <table id="user_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>SNo</th>
                                <th>Email</th>
                                <th>Moble Number</th>
                                <th>Address</th>
                                <th>Type</th>
                                <th>Status</th>
                                <td>Action</td>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i<userdata.length; i++) {%>
                                <tr>
                                    <td>
                                        <%= i+1 %>
                                    </td>
                                    <td>
                                        <%= userdata[i].user_email %>
                                    </td>
                                    <td>
                                        <%= userdata[i].user_mobile %>
                                    </td>
                                    <td>
                                        <%= userdata[i].user_address %>
                                    </td>
                                    <td>
                                        <%= userdata[i].user_type %>
                                    </td>
                                    <td>
                                        <% if(userdata[i].user_status=='enable' ){ %>
                                            <a
                                                href="delete_user?user_id=<%= userdata[i].user_id %>&delet=<%= userdata[i].user_status %>">Active</a>
                                            <% }else{ %>
                                                <a
                                                    href="delete_user?user_id=<%= userdata[i].user_id %>&delet=<%= userdata[i].user_status %>">Inactive</a>

                                                <% } %>
                                    </td>
                                    <td>
                                        <a
                                            href="edit_user?user_id=<%= userdata[i].user_id %>&delet=<%= userdata[i].user_status %>">edit</a>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->