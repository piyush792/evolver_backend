<% layout('layouts/default') -%>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">

        </div>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1>Add Vendor/Seller</h1>
        </div>
        <div class="panel-body">
            <div class="row">

                <form class="form-horizontal" method="post" action="addusers" role="form" enctype="multipart/form-data">
                    <div class="col-sm-12">
                        <div class="row">
                            <%  if(msgdata!=null){ %>
                            <div class="col-sm-12 alert alert-info">
                                <%= msgdata  %>
                            </div>
                            <%  } %>
                        </div>
                        <br />
                        
                        <% if(errors) { %>
                            <h3 class="errors-heading">Please input the following fields:</h3>
                            <% for (var i = 0; i < errors.length; i++) { %>
                                <p class="alert alert-danger">
                                <%= errors[i].msg %>
                                </p>
                            <% } %>                        
                        <% } %>

                        <div class="row">
                            <div class="col-sm-4">
                                <label>Email:</label>
                            </div>
                            <div class="col-sm-6">
                                <input type="text" name="user_email" value="<%= (data.user_email)?data.user_email:'' %>" class="form-control input-lg btn-mint">
                            </div>
                            <div class="col-sm-2">

                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-4">
                                <label>Mobile:</label>
                            </div>
                            <div class="col-sm-6">
                                <input type="text" name="user_mobile" value="<%= (data.user_mobile)?data.user_mobile:'' %>" class="form-control input-lg btn-mint">
                            </div>
                            <div class="col-sm-2">

                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="col-sm-4">
                                <label>Seller Type<span
                                        class="required-field">*</span></label>
                            </div>
                            <div class="col-sm-6">
                                <select name="seller_type"
                                    class="form-control input-lg btn-mint">
                                    <option value='Company'>Company</option>
                                    <option value='Franchise'>Franchise</option>
                                </select>
                            </div>
                        </div>
                        <br/>

                        <div class="row">
                            <div class="col-sm-4">
                                <label>Address:</label>
                            </div>
                            <div class="col-sm-6">
                                <input type="text" name="user_address" value="<%= (data.user_address)?data.user_address:'' %>" class="form-control input-lg btn-mint">
                            </div>
                            <div class="col-sm-2">

                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-4">
                                <label>Status:</label>
                            </div>
                            <div class="col-sm-6">
                                <select name="user_status" class="form-control input-lg btn-mint">
                                    <option value='enable'>Active</option>
                                    <option value='disable'>Inactive</option>
                                </select>
                            </div>
                            <div class="col-sm-2">

                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-4"></div>
                            <div class="col-sm-2">
                                <input type="submit" value="Add Seller" class="btn btn-primary">
                            </div>
                            <div class="col-sm-4"></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /.row -->

    <!-- /#page-wrapper -->